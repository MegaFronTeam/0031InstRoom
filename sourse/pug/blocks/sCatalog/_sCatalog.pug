											li: a(href="#") От А до Я
											li: a(href="#") От Я до А
						.col-sm-auto
							+e.view
								| Вид:
								+e.view-link.active(href='#'): +icon('grid')
								+e.view-link(href='#'): +icon('lines')
					block
					+pugin
