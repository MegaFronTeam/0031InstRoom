mixin product-item(i, t, p ,pr)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			//- если надо картинку по центру  вывести использовать обертку .img-wrap-center  - если нет- убираем
			.img-wrap-center 
				+img(`img/prod-${i}.jpg`)
		+e.caption
			+e.title!= t
			+e.text!= p
			+e.price!= pr
			+e.btn(href='#')
	// /.product-item

mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		+e.container.container
			.row
				.col-lg-4.col-xl-3
					+b.filter--js
						+e.btn.btn.btn-dark Фильтр
						+e.body
							+e.close--js
							+catalogDropdown()
							+ddGroup()
								+ddGroupItem('Цена, ₽')
