extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sBrandDescription/_sBrandDescription.pug
include ../blocks/sCatalog/_sCatalog.pug
include ../blocks/footer/_footer.pug

block variables
	- let  mainPage= '' 
	- let  bg= '07-brand-detailed.jpg'

block title
	- let  title = 'Farbitex'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	+header()
		+topLine
		+top-nav()
	main
		+page-head('Farbitex', 'Бренды', 'Farbitex')
		+sBrandDescription
		+sCatalog('Товары Farbitex в нашем магазине', false)
			+e.inner-row.row
				-for(let i = 0; i < 21; i++)
					.col-sm-6.col-md-4.col-lg-6.col-xl-4
						+card({
							label: 'Новинка',
							img: 'product-img-1.png',
							title: 'Эмаль Condor ПФ-115 жёлтая 1,8 кг',

							price: '500 ₽',
							oldPrice: '720 ₽',

							inStock: 'в наличии',
						})
				.col-12
					+btnMoreLg()
	+footer()
      



