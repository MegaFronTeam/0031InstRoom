extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug

include ../blocks/sCheckout/_sCheckout.pug
include ../blocks/footer/_footer.pug

block variables
	- let  mainPage= '' 
	- let  bg= ''

block title
	- let  title = 'Оформление заказа'
	title= title
block pagecontent
	//- +mob-mnu()
	
	
	+header()
		+topLine
		+top-nav()
	main
		+page-head('Оформление заказа', 'Оформление заказа')
		+sCheckout()
			+e.stages-row.row
				+stagesLink(`Данные покупателя`).active
				+stagesLink(`Доставка`)
				+stagesLink(`Оплата`)
			+form-wrap
				+e.row.row
					.col-md-6
						+input('', 'text', 'Фамилия')(required)
					.col-md-6
						+input('', 'text', 'Имя')(required)
					.col-md-6
						+input('', 'tel', 'Телефон')(required)
							span.region +7
					.col-md-6
						+input('', 'email', 'Электронная почта')(required)
					.col-md-6.mt-0
						+e.BUTTON.btn.btn.btn-dark(type="submit") Далее
					

	+footer()
      



